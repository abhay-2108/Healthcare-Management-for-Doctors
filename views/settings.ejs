<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient</title>
    <script src="/js/medications.js" defer></script>  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/commonCSS.css">
    <link rel="stylesheet" href="/css/medications.css">
    <link rel="stylesheet" href="/css/settings.css">
    <link rel="stylesheet" href="/css/chatbot.css">
    <script src="/js/loader.js" defer></script>
</head>

<body>
    <div class="container-fluid">
        <div class="left">
            <h3>Patient Dashboard</h3>
            <ul class="items">
                <li><a href="/index">Dashboard</a></li>
                <li><a href="/appointment">Appointment</a></li>
                <li><a href="/patients">Patients</a></li>
                <li><a href="/messages">Messages</a></li>
                <li><a href="/medications">Medications</a></li>
                <li><a href="/documents">Documents</a></li>
                <li><a href="/finance">Finance</a></li>
                <li><a href="/settings" style="background-color: rgba(255, 255, 255, 0.2);">Settings</a></li>
            </ul>
            <ul class="logout">
                <li><a href="/login">Logout</a></li>
            </ul>
        </div>

        <div class="main-content">
            <div class="logo-name">
                <a href="/index"><img src="/images/hospital-logo.webp" alt=""></a>
                <h3>John Hospital</h3>
            </div>

            <!-- <h2>Settings</h2> -->
            <div class="settings-container">

                <div class="settings-section">
                    <h3>User Profile</h3>
                    <form id="user-profile-form">
                        <input type="text" id="name" placeholder="Name"><br>
                        <input type="email" id="email" placeholder="Email"><br>
                        <button type="submit">Save Changes</button>
                    </form>
                </div>
                

                <div class="settings-section">
                    <h3>Notifications</h3>
                    <form id="notification-settings-form">
                        <label><input type="checkbox"> Email Alerts</label><br>
                        <label><input type="checkbox"> SMS Alerts</label><br>
                        <button type="submit">Save Changes</button>
                    </form>
                </div>
                <div class="settings-section">
                    <h3>Appointments Settings</h3>
                    <form id="appointment-settings-form">
                        <label for="defaultDuration">Default Appointment Duration:</label>
                        <input type="number" id="defaultDuration" name="defaultDuration" value="30"><br><br>

                        <label for="bufferTime">Buffer Time Between Appointments:</label>
                        <input type="number" id="bufferTime" name="bufferTime" value="15"><br><br>

                        <label for="appointmentTypes">Appointment Types:</label>
                        <select id="appointmentTypes" name="appointmentTypes" multiple>
                            <option value="newPatient">New Patient</option>
                            <option value="followUp">Follow-up</option>
                            <option value="consultation">Consultation</option>
                            </select><br><br>
                        <button type="submit">Save Changes</button>
                    </form>
                </div>
                <div class="settings-section">
                    <h3>Security</h3>
                    <form id="security-settings-form">
                        <label for="changePassword">Change Password:</label>
                        <input type="password" id="changePassword" name="changePassword"><br><br>
                        <label for="confirmPassword">Confirm Password:</label>
                        <input type="password" id="confirmPassword" name="confirmPassword"><br><br>
                        <button type="submit">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>