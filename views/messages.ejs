<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient</title>
    <script src="/js/health1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/commonCSS.css">
    <link rel="stylesheet" href="/css/msg.css">
    <link rel="stylesheet" href="/css/chatbot.css">
    <script src="/js/loader.js" defer></script>
</head>

<body>
    <div class="container-fluid">
        <div class="left">
            <h3>Patient Dashboard</h3>
            <ul class="items">
                <li><a href="/index">Dashboard</a></li>
                <li><a href="/appointment">Appointment</a></li>
                <li><a href="/patients">Patients</a></li>
                <li><a href="/messages" style="background-color: rgba(255, 255, 255, 0.2);">Messages</a></li>
                <li><a href="/medications">Medications</a></li>
                <li><a href="/documents">Documents</a></li>
                <li><a href="/finance">Finance</a></li>
                <li><a href="/settings">Settings</a></li>
            </ul>
            <ul class="logout">
                <li><a href="/login">Logout</a></li>
            </ul>
        </div>

        <div class="main-content">
            <div class="logo-name">
                <a href="/index"><img src="/images/hospital-logo.webp" alt=""></a>
                <h3>John Hospital</h3>
            </div>

            <div class="patient-msg">
                <h3 class="title">Patient Messages</h3>

                <div class="cards">
                    <% if (messages && messages.length> 0) { %>
                        <% messages.forEach(msg=> { %>
                            <div class="card">
                                <div class="info">
                                    <img src="/images/doctor.webp" alt="Doctor Image">
                                    <div class="text">
                                        <p><strong>
                                                <%= msg.name %>
                                            </strong></p>
                                        <p>
                                            <%= msg.mobile %>
                                        </p>
                                    </div>
                                </div>
                                <div class="msg">
                                    <p>
                                        <%= msg.message %>
                                    </p>
                                </div>
                                <div class="actions approve">
                                    <form action="/messages/<%= msg._id %>/approve" method="POST">
                                        <button type="submit" class="btn btn-successs">Approve</button>
                                    </form>
                                    <form action="/messages/<%= msg._id %>/reject" method="POST">
                                        <button type="submit" class="btn btn-dangers">Reject</button>
                                    </form>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <p>No messages found.</p>
                                    <% } %>
                </div>
            </div>

        </div>
    </div>
</body>

</html>